<div class="container-fluid">
  <h1>Subscriber Data for <%= subscriber.name %></h1>
  <table class="table">
    <tr>
      <th>Name</th>
      <td><%= subscriber.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= subscriber.email %></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= subscriber.zipCode %></td>
    </tr>
  </table>

  <p>
    this subscriber has <%= subscriber.courses.length %> associated course(s)
  </p>

  <div>
    <a class="button" href="/subscribers">View all subscribers</a>
  </div>
  <div>
    <a class="button" href="<%= `/subscribers/${subscriber._id}/edit` %>"
      >Edit Subscriber Profile</a
    >
  </div>
  <div>
    <a
      class="button"
      href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
      onclick="return confirm('Are you sure you want to delete this record?')"
      >Delete Subscriber</a
    >
  </div>
</div>
