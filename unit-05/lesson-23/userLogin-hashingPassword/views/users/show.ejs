<div class="container-fluid">
  <h1>User Data for <%= user.fullname %></h1>
  <table class="table">
    <tr>
      <th>Name</th>
      <td><%= user.fullname%></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <th>Zip Code</th>
      <td><%= user.zipCode %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= user.password %></td>
    </tr>
  </table>
  
  <% if (user.subscribedAccount) { %> 
    <h4 class="center">This user has a <a href= <%= `/subscribers/get/${user.subscribedAccount}` %>>subscribed account</a></h4>
  <% } %>

  <p>
    this user has <%= user.courses.length %> associated course(s)
  </p>

  <div>
    <a class="button" href="/users">View all users</a>
  </div>
  <div>
    <a class="button" href="<%= `/users/${user._id}/edit` %>">Edit User Profile</a>
  </div>
  <div>
    <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete User</a>
  </div>
</div>