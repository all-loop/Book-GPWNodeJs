<div class="container-fluid">
  <h2>Users Table</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Zip Code</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Iteramos a travÃ©s de un arreglo de usuarios en la vista-->
      <% users.forEach(user => { %>
      <tr>
        <td><a href=<%= `/users/get/${user._id}` %>><%= user.fullname %></a></td>
        <td><%= user.email %></td>
        <td><%= user.zipCode %></td>
        <td>
          <a href="<%= `/users/${user._id}/edit` %>">Edit</a>
        </td>
        <td>
          <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
