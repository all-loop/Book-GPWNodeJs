<div class="container-fluid">
  <h2>Subscribers Table</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Iteramos a travÃ©s de un arreglo de subscriptores en la vista-->
      <% subscribers.forEach(subscriber => { %>
      <tr>
        <td><a href=<%= `/subscribers/get/${subscriber._id}` %>><%= subscriber.name %></a></td>
        <td><%= subscriber.email %></td>
        <td>
          <a href="<%= `/subscribers/${subscriber._id}/edit` %>">Edit</a>
        </td>
        <td>
          <a href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>