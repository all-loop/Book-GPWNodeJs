<div class="container-fluid">
  <h2>Courses Table</h2>
  <table class="table">
    <thead>
      <tr>
        <th>title</th>
        <th>Description</th>
        <th>Max Students</th>
        <th>Cost</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- Iteramos a travÃ©s de un arreglo de usuarios en la vista-->
      <% courses.forEach(course => { %>
      <tr>
        <td><a href=<%= `/courses/get/${course._id}` %>><%= course.title %></a></td>
        <td><%= course.description %></td>
        <td><%= course.maxStudents %></td>
        <td><%= course.cost %></td>
        <td>
          <a href="<%= `/courses/${course._id}/edit` %>">Edit</a>
        </td>
        <td>
          <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>