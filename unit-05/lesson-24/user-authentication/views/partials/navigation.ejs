<div id="nav">
  <div class="col-sm nav-align">
    <h1 id="title">Recipe App</h1>
  </div>
  <div class="col-sm nav-align">
    <a href="/"> <span class="button">Home</span> </a>
    <a href="/courses/new"> <span class="button">New Course</span> </a>
    <a href="/subscribers/new"> <span class="button">New Subscriber</span> </a>
    <a href="/users/new"> <span class="button">New User</span> </a>
  </div>
  <div class="login-status">
    <% if (loggedIn) { %>
    <div class="bubble logged-in">
      Logged in as
      <a href="<%= `/users/get/${currentUser._id}` %>"
        ><%= currentUser.fullname %></a
      >
    </div>
    <div class="log-out">
      <a href="/users/logout">Log out</a>
    </div>
    <% } else { %>
    <div class="bubble log-in">
      <a href="/users/login">Log In</a>
    </div>
    <% } %>
  </div>
</div>
